#include <stdio.h>
int main() {
    int n;
    printf("Enter the number you want to find the last digit for :");
    scanf("%d", &n);
    int val = (n)%10;
    printf("The last digit of %d given number is %d ", n, val);
    return 0;
}


========================
If it has negative value:

#include <stdio.h>
int main() {
    int n;
printf("Enter the num you want to find the last digit for :");
    scanf("%d", &n);
    if(n<0)
    {
       int val = -(n % 10); // we want just the last digit no it need not be print with negative value
  printf("The last digit of %d given number is %d ", n, val);
    }
    else
    {
    int val = (n)%10;
    printf("The last digit of %d given number is %d ", n, val);
    }
    return 0;
}
=========================


#include <stdio.h>
int main() {
    int n;
    scanf("%d", &n);
    int ans;
    if(n<0)
    {
     ans = -(n % 10);
    }
    else
    {
     ans = (n)%10;
    }
    printf("The last digit of %d given number is %d ", n, ans);
    return 0;
}


